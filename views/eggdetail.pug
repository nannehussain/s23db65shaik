extends layout

block content
  h1= title
  if (toShow == null)
    h2 No instance to details
  else
    - let eggid = toShow._id
    - let egg_color = toShow.egg_color
    - let egg_type = toShow.egg_type
    - let egg_price = toShow.egg_price
    
    div
      div.row
        div(class='eggAttr mr-3') egg ID is:
          div #{eggid}
      div.row
        div(class='eggAttr mr-3') egg color is:
          div #{egg_color}
      div.row
        div(class='eggAttr mr-3') egg type is:
          div #{egg_type}
      div.row
        div(class='eggAttr mr-3') egg price is:
          div #{egg_price}
